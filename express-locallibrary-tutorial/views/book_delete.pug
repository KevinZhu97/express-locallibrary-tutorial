extends layout 

block content 
  h1 #{title}: #{book.name}

  if bookinstance.length 
  
    p There are still book instances with this book in the database
    p Address these instances before trying again

    h4 Book Instances
    dl 
    each instance in bookinstance 
      dt 
        a(href=instance.url) #{book.title}
      dd #{book.summary}

  else

    p Do you really want to delete this book? 

    form(method='POST' action="") 
        button.btn.btn-primary(type="submit") Delete
      
